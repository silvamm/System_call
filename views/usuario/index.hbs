{{#section 'css'}}
{{/section}}

<section class="card">
  <div class="card-header">Filtros</div>
  <div class="card-body">

    <div class="row">
      <div class="col">
        <select class="form-control">
          <option value="">Todos</option>
          <option value="0">Comum</option>
          <option value="1">Administrador</option>
        </select>
      </div>
      <div class="col">
        <select class="form-control">
          {{#each setores}}
          <option value="{{id}}">{{nome}}</option>
          {{/each}}
        </select>
      </div>

      <div class="col">
        <input class="form-control" type="search" value="" placeholder="Nome ou e-mail" name="Buscar">
      </div>
      <div class="col">
        <select class="form-control">
          <option value="10">10 Registros</option>
          <option value="20">20 Registros</option>
          <option value="30">30 Registros</option>
          <option value="50">50 Registros</option>
          <option value="100">100 Registros</option>
        </select>
      </div>
      <div class="col">
        <button class="btn btn-primary"><i class="fa fa-search"></i> Buscar</button>
      </div>
    </div>
  </div>
</section>

<section class="card">
  <div class="card-header">
    Usuários
  </div>
  <div class="card-body">
    <a class="btn btn-primary float-right" href="/usuario"><i class="fa fa-plus"></i> Adicionar</a>

    <table class="table table-bordered table-hover my-5">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Tipo</th>
          <th>Setor</th>
          <th>E-mail</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each usuarios}}
        <tr>
          <td>{{nome}}</td>
          <td>{{tipo}}</td>
          <td>{{setor.nome}}</td>
          <td>{{email}}</td>
          <td><a type="button" class="btn btn-primary " value="Editar" href='/usuario/{{id}}'><i
                class="fa fa-pencil"></i> Editar</a>
            <button type="button" class="btn btn-danger" value="Excluir" onclick='excluir(this, {{id}})'><i
                class="fa fa-trash-o"></i> Excluir</button></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>


{{#section 'js'}}
<script src="/usuario/js/index.js"></script>
{{/section}}