        <select class="form-control">
          <option value="ca">Chamados Abertos</option>
          <option value="cp">Chamados Pendentes</option>
          <option value="ce">Chamados Encerrados</option>
          <option value="tc">Todos os Chamados</option>
        </select>
      </div>
      <div class="col">
        <select class="form-control">
          <option value="ASe">Secretária</option>
          <option value="AFi">Financeiro</option>
          <option value="Au">Aberto por qualquer um</option>
          <option value="ABi">Biblioteca</option>
          <option value="AGr">Graduação</option>
          <option value="APo">Pós Graduação</option>
        </select>
      </div>

      <div class="col">
        <input class="form-control" type="search" value="" placeholder="Nome ou e-mail" name="Buscar">
      </div>
       <div class="col">
        <select class="form-control">
          <option value="ASe">10 Registros</option>
          <option value="AFi">Financeiro</option>
          <option value="Au">Aberto por qualquer um</option>
          <option value="ABi">Biblioteca</option>
          <option value="AGr">Graduação</option>
          <option value="APo">Pós Graduação</option>
        </select>
      </div>
      <div class="col">
        <button class="btn btn-primary" ><i class="fa fa-search"></i> Buscar</button>
      </div>
    </div>
  </div>
</section>

<section class="card">
    <div class="card-header">
        Usuários
    </div>
    <div class="card-body">
        <a class="btn btn-primary float-right" href="/usuario"><i class="fa fa-plus"></i> Adicionar</a>

        <table class="table table-striped table-advance table-hover my-5">
            <tr>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Setor</th>
                <th>E-mail</th>
                <th>Ações</th>
            </tr>
            {{#each usuarios}}
            <tr>
                <td>{{nome}}</td>
                <td>{{tipo}}</td>
                <td>{{setor.nome}}</td>
                <td>{{email}}</td>
                <td><a type="button" class="btn btn-primary " value="Editar" href='/usuario/{{id}}'><i class="fa fa-pencil"></i> Editar</a>
                <button type="button" class="btn btn-danger" value="Excluir"
                        onclick='excluir(this, {{id}})'><i class="fa fa-trash-o"></i> Excluir</button></td>
            </tr>
            {{/each}}

        </table>
    </div>
</section>


{{#section 'js'}}
<script src="/usuario/js/index.js"></script>
{{/section}}